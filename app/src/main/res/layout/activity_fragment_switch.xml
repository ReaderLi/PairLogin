<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:name="com.withlovee.pairlogin.Fragment.GasFragment"
        android:id="@+id/fragment1"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_width="fill_parent"
        tools:layout="@layout/activity_gas" />
    <fragment
        android:name="com.withlovee.pairlogin.Fragment.SensorFragment"
        android:id="@+id/fragment2"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_width="fill_parent"
        tools:layout="@layout/activity_sensor" />

    <fragment
        android:name="com.withlovee.pairlogin.Fragment.UserCenterFragment"
        android:id="@+id/fragment3"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_width="fill_parent"
        tools:layout="@layout/activity_user_center" />


    <include layout="@layout/switch_fragment_foottab"/>

</LinearLayout>